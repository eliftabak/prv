{
    //PLUGİNS-START
    "fontAwesomeAutocomplete.version": "4",
    "html-css-class-completion.includeGlobPattern": "wp-content/themes/prv/resources/assets/styles/**/*.{scss}",
    "html-css-class-completion.remoteStyleSheets": [
        "https://maxcdn.bootstrapcdn.com/bootstrap/4.0.0/css/bootstrap.min.css"
    ],
    "emmet.syntaxProfiles": {
        "javascript": "jsx"
    },
    "emmet.preferences": {
        "css.webkitProperties": "border-right,animation",
        "css.mozProperties": "",
        "css.oProperties": "",
        "css.msProperties": ""
    },
    "emmet.includeLanguages": {
        "blade": "html"
    },
    "prettier.disableLanguages": [
        "javascript",
        "json"
    ],
    "stylelint.enable": true,
    "eslint.validate": [
        "javascript",
    ],
    "intelephense.files.associations": [
        "*.php",
    ],
    "intelephense.files.exclude": [
        "**/.git/**",
        "**/.svn/**",
        "**/.hg/**",
        "**/CVS/**",
        "**/.DS_Store/**",
        "**/node_modules/**",
        "**/bower_components/**",
        "**/vendor/**/{Test,test,Tests,tests}/**"
    ],
    //PLUGİNS-END
    //LANGUAGES-START
    "javascript.validate.enable": false,
    "javascript.updateImportsOnFileMove.enabled": "always",
    "javascript.implicitProjectConfig.checkJs": true,
    "[javasscript]": {
        "editor.formatOnSave": false
    },
    "css.validate": false,
    "less.validate": false,
    "scss.validate": false,
    "[scss]": {
        "editor.formatOnSave": true
    },
    "css.remoteStyleSheets": [
        "https://cdnjs.cloudflare.com/ajax/libs/twitter-bootstrap/4.4.1/css/bootstrap.min.css"
    ],
    "css.fileExtensions": [
        "css",
        "scss"
    ],
    "[njk]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.html-language-features",
    },
    "html.suggest.html5": true,
    "[html]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.html-language-features",
    },
    "blade.format.enable": true,
    "[blade]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "onecentlin.laravel-blade",
    },
    "php.validate.executablePath": "/opt/lampp/bin/php",
    "php.executablePath": "/opt/lampp/bin/php",
    "php.suggest.basic": false,
    "[php]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "bmewburn.vscode-intelephense-client",
    },
    "[jsonc]": {
        "editor.formatOnSave": true,
        "editor.defaultFormatter": "vscode.json-language-features",
    },
    //LANGUAGES-END
    //FILES-START
    "files.trimTrailingWhitespace": true,
    "files.associations": {
        "*.module": "php",
        "blade": "html,php",
    },
    "files.exclude": {
        "**/*.json": true,
        "**/*.md": true,
        "**/*.git": true,
        "**/*.gitignore": true,
        "**/*.svn": true,
        "**/*.DS_Store": true,
        "**/*gulp": true,
        "**/*.idea": true,
        "**/.vscode": false,
        "**/*node_modules": true, // Node Modukes
        "**/*.lock": true, // Lock Files
        "**/*.babelrc": true,
        "**/*.editorconfig": true,
        "**/*.eslintrc.js": true,
        "**/*phpcs.xml": true,
        "**/*editorconfig": true,
        "**/*.stylelintrc.js": true,
        "**/*.map": true, //JS Map Files
        "**/*.gitkeep": true,
        "**/*.stylelintrc": true,
        "**/*/.cache-loader": true,
        "**/*.config.*js": true, //JS Config Files
        "**/config.js": true, //JS Config Files
        ".htaccess": true,
        "license.txt": true,
        "readme.html": true,
        "LICENSE": true,
        //FOLDERS
        "**/*cache": true,
        "**/*tmp": true,
        "**/*temp": true,
        "wp-content/themes/*teen": true,
        "wp-content/themes/*ty": true,
        "wp-content/languages": true,
        "wp-content/uploads": true,
    },
    "files.watcherExclude": {
        "**/.git/objects/**": true,
        "**/node_modules/**": true,
        "**/*cache": true,
        "**/*tmp": true,
        "**/*temp": true,
        "wp-content/languages/**": true,
        "wp-content/uploads/**": true,
        "wp-content/plugins/**": true,
        "wp-content/mu-plugins/**": true,
        "wp-includes/**": true,
    },
    //FILES-END
    //SEARCH-START
    "search.exclude": {
        "**/node_modules": true,
        "**/bower_components": true,
        "**/.git": true,
        "**/.DS_Store": true,
        "**/tmp": true,
        "**/coverage": true,
        "**/ios": true,
        "**/android": true,
        "**/*.config.*js": true,
        "*.php": true,
        "wp-content/languages": true,
        "wp-content/uploads": true,
        "wp-content/themes/*teen": true,
        "wp-content/themes/*ty": true,
        "wp-content/plugins/**": true,
        "wp-content/mu-plugins/**": true,
        "wp-admin/*": true,
        "wp-includes/*": true,
        "wp-content/themes/prv/vendor/**": true,
    },
    //SEARCH-END
}